name: Deploy Vite Site to GitHub Pages

on:
  push:
    branches:
      - main  # Trigger on push to main branch

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'  # Use a supported Node version

      - name: Install dependencies
        run: npm install  # Assumes you have a package.json with Vite

      - name: Build Vite site
        run: npm run build  # Assumes "build" script outputs to dist/

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: dist  # Viteâ€™s default output directory
